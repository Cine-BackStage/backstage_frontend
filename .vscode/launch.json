{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Development (Local API)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENV=development",
        "--dart-define=API_URL=http://10.0.2.2:3000"
      ]
    },
    {
      "name": "Production (Railway API)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENV=production",
        "--dart-define=API_URL=https://backstagebackend-production.up.railway.app"
      ]
    },
    {
      "name": "Development (Chrome)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENV=development",
        "--dart-define=API_URL=http://localhost:3000",
        "-d",
        "chrome"
      ]
    },
    {
      "name": "Production (Chrome)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=ENV=production",
        "--dart-define=API_URL=https://backstagebackend-production.up.railway.app",
        "-d",
        "chrome"
      ]
    }
  ]
}
